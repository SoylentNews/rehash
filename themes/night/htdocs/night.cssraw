body, div, form, #links ul li, #links ul, #topnav, img { font-size: 100%; }
body, body.admin
{
background: #222;
color:#ddd;
}
.user_admin, body .adminstoryform fieldset {background: #440;}

a, .error { color: #d00; }
a:visited { color: #fff; }
a:hover { color: #800;}

/* layout */
#contents
{
	min-width: 20em;
}


/* Header */
#logo h1 a
{
	width: 115px;
	height: 80px;
	background: url("[% constants.imagedir %]/logo_night.png") no-repeat;
	  background-size: 115px 80px;
}

#slogan h2, #slogan #head_message
{
	color: #ccc;
	font-weight: bold;
	font-size: .813em;
}

#slogan #head_message a { color: #ccc }

#section_banner  {     
	background-color: #600;
	background: linear-gradient(#933, #600);
	border-radius: 8px;
	font-size: 1.125em;
	font-weight: bold;
}

/* links */
#links a, #links a:visited, #slashboxes a { color: #a00; text-decoration:none;}
#links a:hover, #slashboxes a:hover { color: #600; text-decoration: underline; }

.comment_count { color: #a00; }

#links div.title {
	background: #666;
	border-radius: 10px 10px 0 0;
}

#links h4
{
	font-weight: bold;
	font-size: .813em;
}

#links div.content
{
	background: #aaa;
	border-radius: 0 0 10px 10px;
	padding: .3em .3em .6em .3em;
	font-size: .755em;
	line-height: 1.4em;
	position: relative;
}

#navigation-content li.user
{
	background: #666;
	color: #fff;
}

#navigation-content ul ul
{
	background: #aaa;
}

/* slashboxes */
#slashboxes div.title
{
	background: #666;
	border-radius: 10px 10px 0 0;
}

#slashboxes h4
{
	font-size: .813em;
	color: #fff;
}

#slashboxes div.content
{
	color:#fff;
	background: #aaa;
	border-radius: 0 0 10px 10px;
	font-size: .755em;
	line-height: 1.4em;
}

#slashboxes .highlight
{
	background: #555;
}

.indexhead
{
	font-size: .875em;
}


/* Commnets Pages */

.commentTop .title {
	background-color: #600;
	background: linear-gradient(#933, #600);
	border-radius: 10px 10px 0 0;
}


.commentTop .title h4
{
	color: #fff;
}

.commentTop .details
{
	border: 1px solid #aaa;
	background-color: #444;
	background: linear-gradient(#444, #222);	
	color: #fff;
}

.commentTop .details a, .commentTop .details a:hover, .commentTop .details a:visited
{
	color: #f00;
}

.commentSub
{
	border: 1px solid #aaa;
	border-top: none;
	background:#222
}

.commentBody
{
	border: 1px solid #aaa;
	border-bottom: none;
	border-top: none;
	background:#222;
}

.commentBody blockquote, .commentBody .quote {
	background: linear-gradient(to right, rgba(255, 255, 255, 0.07), transparent 40%) repeat scroll 0% 0% transparent;
	border-left-color: rgba(255,255,255, 0.4);
}

#commentlisting ul
{
	border-left: 1px solid #aaa;
}

#previewComment .preview
{
	border-bottom: 1px solid #aaa;
}

.commentBox { background: #a00; }

#commentwrap, .commentwrap, .commentBoxForm
{
	background: #888;
}

.linkCommentPage {
	background: #555;
}


/* FORMTABS */

#formtabs ul li{
	background: #933;
	border-radius: .3em .3em 0 0;
	color: #fff;
}

#formtabs ul li.active{
	color: #fff;
}

#formtabs ul li a {
text-decoration:none;
	color:#fff;
}

#formtabs ul li a:visited {
	color:#fff;
}
#formtabs ul li a:hover {
	color:#fff;
}


/* Quick links content */
#slashboxes #index_qlinks-content ul, #slashboxes #index_qlinks-content li, #slashboxes #features_qlinks-content ul, #slashboxes #features_qlinks-content li
{
	list-style: none;
	padding: 0;
	margin: 0;
}

/* General */

.generaltitle h3
{
	color: #fff;
	font-size: 1em;
}

.generalbody
{
	background: #222;
	border: 1px solid #aaa;
}


/* articles */

.generaltitle div.title, .article div.title, .search-results h4 {
	background-color: #600;
	background: linear-gradient(#933, #600);
	border-radius: 10px 10px 0 0;
}

#journal .article h3
{
	color: #fff;
	font-size: 1em;
}

.article .details, .search-results .data
{
	font-size: .7em;
	font-weight: normal;
	border: 1px solid #aaa;
	background-color: #444;
	background: linear-gradient(#444, #222);
}

.article .body, .search-results .intro, .search-results .author
{
	border: 1px solid #aaa;
	border-top: none;
	background: #222;
}

.article blockquote,  .article .quote {
	background: linear-gradient(to right, rgba(255, 255, 255, 0.05), transparent 60%) repeat scroll 0% 0% transparent;
	border-left-color: rgba(255,255,255, 0.3);
}

div.storylinks, .search-results .details
{
	background-color: #444;
	background: linear-gradient(#444, #222);
	border: 1px solid #aaa;
	border-top: none;
	border-radius: 0 0 10px 10px;
	font-size: .813em;
}

div.storylinks div ul 
{
	padding: .5em 1em; 
	margin: 0;
	line-height: .875em;
}

div.storylinks ul li 
{ 
	padding: .3em .5em; 
	border-left: 1px solid #555; 
}


/* Footer */
#footer em
{
	font-size: .813em;
	float: right;
	width: 45%;
}

#footer .search
{
	font-size: .7em;
	width: 50%;
	padding: 0 .3em;
	margin: 0;
}

#footer legend, #footer fieldset, #footer label
{
	margin: 0;
	padding: 0;
}

#footer .search input { margin: 0; }

#footer .copyright
{
	font-size: x-small;
	color: #000;
}

#footer .admin li
{
	border-left: 1px solid #555;
	margin: 0;
	padding: 0;
	list-style: none;
	display: inline;
}

.story_main { background: #ccc;}


input[type=submit], button[type=submit], .logout a, div.storylinks ul li.more a, input[type=submit]:hover, button[type=submit]:hover, .logout a:hover, div.storylinks ul li.more a:hover, .nbutton b a, .nbutton b a:hover
{
	background-color: #666;
}

input[type=text], input[type=password] {border: 1px solid #666;}


#adminmenu a {color:#600}

.data_head
{
	background: #600;
}
tr.flagged * {
	text-decoration: line-through;
}
.data, .data_hl1, .data_hl2, .data_hl3
{
	background: #888;
	color:#fff;
}

.data_hl2 {
	background: #aaa;
}

.data .status0
{
	background: #aa6;
}
.data .status1
{
	background: #a66;
}
.data .status2
{
	background: #6a6;
}

.status0 a, .status1 a, .status2 a{ color:#fff; }

.lt_tb_col { background: #222; }

/* Comments */
.commentBox { background: #600; }

/* Poll */
.barColor { background: #600; }

/* Bottom Nav */
.btmnav
{
	color: #f00;
	font-size: .7em;
}

.btmnav ul li a, .btmnav ul li a:visited { color: #d00; }

/* Journal */
.journaldate { position: relative; }
.generalbody #journalgeneric .article
{
	height: auto;
	margin: 0 0 1em 0;
}

#authors .generalbody h3 a { color: #fff; }

/* Forms */
textarea { width: 80%; }
#journal input.button, #admin input.button { width: auto; }

/* Misc */
.tb_col { background: #600;}


/* Usermenu */

ul.menu li a, ul.menu li a:visited { color: #fff; }

ul.menu li.selected a, ul.menu li a:hover { color: #f00; }

.generalbody ul.menu li a { color: #f00; }

#usermenu{
	border: 1px solid #aaa;
	border-bottom: none;
	background:#222;
}

#usermenu ul.menu
{
	border-bottom: 1px solid #aaa;
	padding: .2em 0 0 0;
}

#usermenu ul.menu li
{
	padding: .2em;
}

#usermenu ul.menu li a
{
	background-color: #600;
	background: linear-gradient(#933, #600);
	border-radius: .3em .3em 0 0;
	border: none;
	padding: .2em .6em;
	text-decoration: none;
	color: #fff;
}

#usermenu ul.menu li.selected a
{
	background-color: #777;
	background: linear-gradient(#777, #555);	
	text-decoration: none;
	color: #fff;
}

#adminmenu ul.menu a, #adminmenu ul.menu a:visited { color: #600; }

.menuoldstyle li
{
	display: inline;
	list-style: none;
	margin: 0;
	padding: 0 2px 0 1px;
}

.menuoldstyle ul
{
	padding: 0;
	margin: 0 0 1em 0;
}

.menuoldstyle li:before { content: "| "; }
.menuoldstyle li:first-child:before { content: ""; }

#article .briefarticle { padding: .3em .6em; background: #ccc; font-size: .813em; color:#000; }
#article .briefarticle a { color: #000 }
#article .briefarticle .storytitle { font-weight: bold; }

#index .briefarticle { 
	padding: .3em .6em;  
	color:#fff;
	margin-bottom: .6em;
	background-color: #600;
	background: linear-gradient(#933, #600);
	border-radius: 10px;
}

#index .briefarticle a { color: #fff; text-decoration: none; font-weight: bold;}
	.briefarticle .section { color: #222; }
	.briefarticle .introhide { display : none }
	.briefarticle .intro { padding-left: 1em; padding-top: 0.5em;}

/* Messaging */

.message_menu{
	border: 1px solid #aaa;
	background: #222;
	color: #fff;
	border-bottom: none;
}

.message_menu ul
{
	margin: 0;
}

.message_subject
{
	border: 1px solid #aaa;
	background-color: #444;
	background: linear-gradient(#444, #222);
	color: #fff;
}

.message_body
{
	border: 1px solid #aaa;
	border-bottom: none;
	border-top: none;
	background: #222;
}

.message_footer
{
	border: 1px solid #aaa;
	border-top: none;
	background: #222;
}

li.comment input[type=checkbox]:checked ~ div.commentDiv div.commentTop .title h4,
li.comment input[type=checkbox]:checked ~ div.commentDiv div.commentTop .title h4 a
{
  color: #fff;
}

.body blockquote.spoiler {
	background: linear-gradient(to right, rgba(255, 255, 255, 0.3), transparent 60%);
}
