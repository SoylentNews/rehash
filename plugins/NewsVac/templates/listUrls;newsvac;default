	[%- FOREACH u = urls -%]
		[%- DEFAULT 
			u.last_success_formatted = '<I>n/a</I>',
			u.message_body_length = 0,
			u.referencing = 0;

			YesNo = { '0' => 'N', '1' => 'Y' }; 
			IF u.is_success.defined;
		   		success = YesNo.${u.is_success}; 
			ELSE; 
		   		success = '<I>n/a</I>'; 
			END
		-%]
        <TR>
