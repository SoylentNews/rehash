[% CASE 'freakshead' %]
	Freaks of <A HREF="[% constants.rootdir %]/~[% nickname | fixparam %]/"><FONT COLOR="[% user.fg.0 %]">[% nickname | strip_literal %]</FONT></A> ([% uid %]) [% PROCESS zoo_icons person=uid implied="" %]

[% CASE 'friendsenemieshead' %]
	Foes of the Friends of <A HREF="[% constants.rootdir %]/~[% nickname | fixparam %]/"><FONT COLOR="[% user.fg.0 %]">[% nickname | strip_literal %]</FONT></A> ([% uid %]) [% PROCESS zoo_icons person=uid implied="" %]

[% CASE 'friendsoffriendshead' %]
