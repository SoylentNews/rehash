    id MEDIUMINT UNSIGNED NOT NULL auto_increment,
    uid MEDIUMINT UNSIGNED NOT NULL,
    person MEDIUMINT UNSIGNED NOT NULL,
    type enum("friend","foe"),
    action enum("add","delete"),
    PRIMARY KEY (id)
);


